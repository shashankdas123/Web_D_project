<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Log in</h1>
    <div class="col-6 offset-3">
       
        <form action="/login" method="post" class="needs-validation" novalidate >
            <div >
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control inplab " required>

            </div>

            <div>
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control inplab " required>

            </div>

            <button class="btn btn-success mt-5 offset-5">Log in</button>




        </form>

        </div>
    </div>